---
import Layout from '../../layouts/Layout.astro'
import HeroSection from '../../features/LandingPage/Hero/Hero.astro'
import HeadLabelSection from '../../components/ui/HeadLabelSection.astro'
import FeaturedProjects from '../../features/LandingPage/FeaturedProjects/FeaturedProjects.astro'
import Experience from '../../features/LandingPage/Experience/Experience.astro'
import { staticPaths } from '../../i18n/index.ts'
import Services from '../../features/LandingPage/Services/Services.astro'
import WhatsappFloating from '../../components/WhatsappFloating.astro'
import SkillMarque from '../../features/LandingPage/SkillMarque/SkillMarque.astro'
import LatestBlogs from '../../features/LandingPage/LatestBlogs/LatestBlogs.astro'

const BASE_URL = import.meta.env.BASE_URL
const { lang } = Astro.params

export function getStaticPaths() {
    return staticPaths()
}

if (lang !== 'en' && lang !== 'id') {
    return Astro.redirect(`${BASE_URL}en/`)
}
---

<Layout lang={lang}>
    <!-- Hero Section -->
    <HeroSection lang={lang} />

    <!-- About Me [Simple] -->

    <!-- Projects Section -->
    <FeaturedProjects lang={lang} />

    <!-- Services Section -->
    <Services lang={lang} />

    <!-- Skill Marque -->
    <SkillMarque lang={lang} />

    <!-- Latest Blogs -->
    <LatestBlogs lang={lang} />

    <!-- WhatsApp Floating -->
    <WhatsappFloating />
</Layout>
