---
import Layout from '../../layouts/Layout.astro'
import { staticPaths } from '../../utils/i18n'

const { lang } = Astro.params

export function getStaticPaths() {
    return staticPaths()
}

if (lang !== 'en' && lang !== 'id') {
    return Astro.redirect(`${BASE_URL}en/`)
}

