---
import Experience from '../../features/LandingPage/Experience/Experience.astro'
import Layout from '../../layouts/Layout.astro'
import { staticPaths } from '../../utils/i18n'

const { lang } = Astro.params

export function getStaticPaths() {
    return staticPaths()
}

if (lang !== 'en' && lang !== 'id') {
    return Astro.redirect(`${BASE_URL}en/`)
}
---

<Layout>
    <!-- About Me -->
    <section class="mt-25 lg:mt-40 px-5 lg:px-20">
        <div class="flex gap-10 flex-col lg:flex-row bg-black/20 p-5 lg:p-10 rounded-3xl backdrop-blur-sm">
            <div
                class="w-full max-w-50 lg:max-w-70 shadow-lg shadow-sky-200 rounded-full p-2 bg-slate-200 mx-auto overflow-hidden"
            >
                <img
                    src="/me/profile.jpg"
                    alt="Profile Adi Aulia Rahman"
                    class="w-full h-full object-cover rounded-full"
                />
            </div>
            <div>
                <div class="text-start max-w-xl mb-4">
                    <div
                        class="font-anton text-3xl lg:text-5xl bg-clip-text bg-linear-to-br from-white to-sky-500 text-transparent"
                    >
                        ABOUT ME
                    </div>
                </div>
                <p class="text-xs lg:text-sm">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eum, laborum praesentium ut totam officia
                    illum excepturi rerum autem! Quasi, accusantium officiis harum minima laudantium quod vero sit
                    suscipit nostrum dicta, nobis, sapiente nesciunt laboriosam? Voluptas quod deserunt culpa?
                    Accusantium qui architecto animi odit ut, nobis ex quas? Perspiciatis quia pariatur atque possimus
