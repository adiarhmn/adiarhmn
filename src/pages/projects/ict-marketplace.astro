---
import Layout from '../../layouts/Layout.astro'
const project = {
  title: 'Marketplace Politala',
  year: 'Okt 2024 – Jan 2025',
  desc: `
    Website marketplace untuk penjualan berbagai produk berkualitas di Politala.
    Dibangun menggunakan CodeIgniter 4 & Bootstrap 4 dengan fokus pada kemudahan
    transaksi, pengelolaan produk, dan pengalaman pengguna yang intuitif.
  `,
  image: '/projects/ict-marketplace/tim.jpeg',
  gallery: [
    '/projects/ict-marketplace/rapat.jpeg',
//     '/projects/ict-marketplace/ss2.png',
//     '/projects/ict-marketplace/ss3.png',
  ],
}
---

<Layout>
  <section class="py-16">
    <!-- Title -->
    <h1 class="text-4xl font-bold mb-4 text-gray-900">
      {project.title}
    </h1>

    <!-- Year -->
    <p class="text-gray-500 mb-6">{project.year}</p>

    <!-- Hero Image -->
    <img
      src={project.image}
      alt={project.title}
      class="w-full rounded-xl shadow-lg mb-10"
    />

    <!-- Description -->
    <div class="prose prose-gray max-w-none mb-16">
      <p>{project.desc}</p>

      <h3 class="font-semibold mt-5">Peran & Kontribusi</h3>
      <ul class="list-disc pl-6">
        <li>Membangun sistem marketplace berbasis CodeIgniter 4.</li>
        <li>Membuat CMS Admin untuk manajemen produk & transaksi.</li>
        <li>
          Mengimplementasikan UI Bootstrap 4 yang clean & mobile-friendly.
        </li>
        <li>Mendesain struktur database & API internal.</li>
      </ul>

      <h3 class="font-semibold mt-5">Teknologi yang Digunakan</h3>
      <ul class="list-disc pl-6">
        <li>CodeIgniter 4</li>
        <li>Bootstrap 4</li>
        <li>MySQL</li>
        <li>jQuery</li>
      </ul>
    </div>

    <!-- Gallery -->
    {
      project.gallery && (
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-20">
          {project.gallery.map((img) => (
            <img src={img} alt="Project Preview" class="rounded-lg shadow-md" />
          ))}
        </div>
      )
    }

    <!-- Back Button -->
    <a
      href="/projects"
      class="inline-block px-6 py-3 rounded-lg bg-gray-900 text-white hover:bg-gray-700 transition"
    >
      ← Kembali ke Projects
    </a>
  </section>
</Layout>
