---
import HeadLabelSection from '../../../components/ui/HeadLabelSection.astro'
import content from './content.json'
import { ServicesData } from './data'

const { lang } = Astro.props as { lang: 'en' | 'id' }

const t = content[lang]

const services = ServicesData[lang]
---

<section class="pb-20 z-2 px-5 lg:px-30 mt-20 scroll-reveal">
    <div class="w-full">
        <HeadLabelSection title={t.title} description={t.subtitle} />
        <div class="bg-black rounded-3xl border border-slate-700 mt-10 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-sky-900/10 via-transparent to-transparent pointer-events-none"></div>
            <ul class="grid grid-cols-1 md:grid-cols-3 p-5 lg:p-10 gap-4 relative">
                {
                    services.map((service, index) => (
                        <li 
                            class={`${index % 3 !== 2 ? 'lg:border-r-2 border-dashed border-slate-700 pr-5' : ''} pb-4 scroll-reveal-scale`}
                            style={`animation-delay: ${index * 150}ms`}
                        >
                            <div class="text-center lg:px-5 group hover:scale-105 transition-transform duration-300">
                                <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-sky-500/20 flex items-center justify-center group-hover:bg-sky-500/30 transition-colors">
                                    <i data-lucide={service.icon || 'code'} class="size-6 text-sky-400"></i>
                                </div>
                                <h3 class="font-bold text-lg mb-1 py-1 text-transparent bg-linear-to-r from-sky-500 to-sky-950 bg-clip-text">
                                    {service.title}
                                </h3>
                                <p class="text-xs lg:text-sm text-slate-300">{service.description}</p>
                            </div>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</section>
