---
const { image, title, year, desc, link } = Astro.props
---

<div
  class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition"
>
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover"
  />
  <div class="p-5">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="text-sm text-gray-500 mb-3">{year}</p>
    <p class="text-gray-700">{desc}</p>
  </div>
  {
    link && (
      <a
        href={link}
        class="block text-center py-3 bg-gray-800 text-white hover:bg-gray-900 transition mx-5 rounded-md"
      >
        Lihat Detail
      </a>
    )
  }
</div>
